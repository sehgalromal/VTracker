<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walls12"
    tools:context="vyom.com.vtracker.LaunchActivity">

    <TextView
        android:text="Login"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="#FFFF00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/Login" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cutmypic"
        android:id="@+id/image_iota"
        android:layout_below="@+id/progressBar4"
        android:layout_toRightOf="@+id/progressBar4"
        android:layout_toEndOf="@+id/progressBar4" />

    <TextView
        android:text="@string/headline"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:textSize="13sp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/progressBar4"
        android:layout_toRightOf="@+id/image_iota"
        android:layout_toEndOf="@+id/image_iota" />


    <Button
        android:id="@+id/bt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_above="@+id/tv_alrady_a_user"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:id="@+id/tv_alrady_a_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already a user?Sign in!"
        android:background="@null"
        android:textColor="#ffffff"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyle"
        android:layout_width="30dp"
        android:visibility="gone"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_google_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google Sign-in"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_above="@+id/tv_alrady_a_user"
        android:layout_alignLeft="@+id/Login"
        android:layout_alignStart="@+id/Login" />


</RelativeLayout>
